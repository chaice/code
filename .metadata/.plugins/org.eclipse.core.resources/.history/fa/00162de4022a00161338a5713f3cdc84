package com.ccit.dao;

import java.sql.CallableStatement;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

import com.ccit.entity.Entity;

public class MyService {
	public String bo_bor( String bookcode, String cardcode) {
		return borrDAO("{call pro_bro(?,?,?)}", bookcode, cardcode);
	}

	public String bo_ret() {

		return null;
	}

	public String borrDAO(String sql, String bookcode, String cardcode) {
		try {
			String mes = "";
			Connection con = DriverManager.getConnection(Entity.URL);
			CallableStatement cs = con.prepareCall(sql);
			cs.setString(1, bookcode);
			cs.setString(2, cardcode);
			cs.executeQuery();
			mes = cs.getString(3);
			
		} catch (SQLException e) {
			e.printStackTrace();
		}
		return mes;
	}
}
